<h1>Employees</h1>

<div><%= link_to 'Create Employee', new_employee_path %></div>
<br />

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last Name</th>
      <th>title</th>
      <th>Alias</th>
      <th>Office</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.first_name %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.title %></td>
        <td><%= employee.alias %></td>
        <td><%= employee.office %></td>
        <td>
          <%= link_to 'View', employee %> |
          <%= link_to 'Edit', edit_employee_path(employee) %> |
          <%= link_to 'Delete', employee, method: :delete, data: { confirm: 'For real?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>