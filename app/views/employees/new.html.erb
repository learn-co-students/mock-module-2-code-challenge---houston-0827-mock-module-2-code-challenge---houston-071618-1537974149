<h3>New Employee Form</h3>
<%= form_with model: @e do |f| %>
  <%= f.label :first_name %><br>
  <%= f.text_field :first_name %><br><br>

  <%= f.label :last_name %><br>
  <%= f.text_field :last_name %><br><br>

  <%= f.label :title %><br>
  <%= f.text_field :title %><br><br>

  <%= f.label 'Nickname' %><br>
  <%= f.text_field :alias %><br><br>

  <%= f.label 'Scranton Branch' %><br>
  <%= f.text_field :office %><br><br>

  <%= f.label 'Supports Which Dog?' %><br>
  <%= f.collection_select :dog_id, Dog.all, :id, :name %><br><br>

  <%= f.label 'Profile Picture' %><br>
  <%= f.file_field :img_url  %><br><br>

  <%= f.submit %>

  <% end %>
